
@{ ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml"; }


<section class="content" ng-controller="AdminJsonEditor">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Admin Degree Program </h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form name="blogForm" novalidate>

                            <div class="span span50">
                                <json-tree json="jsonData" node="nodeOptions" collapsed-level="9"></json-tree>
                            </div><div class="span span50">
                                @*<pre style="background-color: rgba(236, 255, 220, 0.47);"><code>{{jsonData | json}}</code></pre>*@
                            </div>

                            <button ng-click="jsonData.function1()">Call <span style="color: #A75031;">function1</span></button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-size:small;">Press 'Ctrl' to drag</span>

                            <div style="float: right;">
                                <button ng-click="refresh()">Refresh</button>
                            </div>




                            <div class="modal-footer justify-content-between">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" id="submit" class="btn btn-primary" ng-click="submit($event)" >Save changes</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->


                </div>
                <!-- /.card -->

            </div>
        </div>

    </div><!-- /.container-fluid -->



</section>
<!-- /.modal -->
