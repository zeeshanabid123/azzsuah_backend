
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="row" ng-controller="AdminLibaray">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Filters</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div id="accordion">
                    <div class="card">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" ng-click="onTabChange(1)">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">

                                    Photos

                                </h5>
                            </div>
                        </button>
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio1" ng-model="Isused" name="customRadio1" value="true" ng-click="usedUnuseed(1)">
                                        <label for="customRadio1" class="custom-control-label">Used</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio2" ng-model="Isused" name="customRadio2" value="false" ng-click="usedUnuseed(1)">
                                        <label for="customRadio2" class="custom-control-label">Not Used</label>
                                    </div>
                                    <div class="card-header">
                                        <h2 class="card-title">Categories</h2>
                                    </div>

                                    <div class="custom-control custom-checkbox" ng-repeat="data1 in PtypesCount">
                                        <input type="checkbox" class="custom-control-input" id="{{data1.name}}" value="{{data1.id}}" ng-model="data1.id" ng-change="CheckBoxSearchPhoto(data1,1)">
                                        <label for="{{data1.name}}" class="custom-control-label">{{data1.name}}</label>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" ng-click="onTabChange(2)">
                            <div class="card-header" id="headingTwo">
                                <h5 class="mb-0">

                                    Videos

                                </h5>
                            </div>
                        </button>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio3" ng-model="Isused" name="customRadio3" value="true" ng-click="usedUnuseed(2)">
                                        <label for="customRadio3" class="custom-control-label">Used</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio4" ng-model="Isused" name="customRadio4" value="false" ng-click="usedUnuseed(2)">
                                        <label for="customRadio4" class="custom-control-label">Not Used</label>
                                    </div>
                                    <div class="card-header">
                                        <h2 class="card-title">Categories</h2>
                                    </div>

                                    <div class="custom-control custom-checkbox" ng-repeat="video in PtypesCount">
                                        <input type="checkbox" class="custom-control-input" id="{{video.profileTypeId}}" value="{{video.profileTypeId}}" ng-model="video.idvideo" ng-change="CheckBoxSearchvideo(video,2)">
                                        <label for="{{video.profileTypeId}}" class="custom-control-label">{{video.name}}</label>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree" ng-click="onTabChange(3)">
                            <div class="card-header" id="headingThree">
                                <h5 class="mb-0">

                                    Profile Pictures

                                </h5>
                            </div>
                        </button>
                        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio5" ng-model="Isused" name="customRadio5" value="true" ng-click="usedUnuseed(3)">
                                        <label for="customRadio5" class="custom-control-label">Used</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio6" ng-model="Isused" name="customRadio6" value="false" ng-click="usedUnuseed(3)">
                                        <label for="customRadio6" class="custom-control-label">Not Used</label>
                                    </div>
                                    <div class="card-header">
                                        <h2 class="card-title">Categories</h2>
                                    </div>

                                    <div class="custom-control custom-checkbox" ng-repeat="profile in PtypesCount">
                                        <input type="checkbox" class="custom-control-input" id="{{profile.profileTypeId}}-'1'" value="{{profile.profileTypeId}}" ng-model="profile.idpro" ng-change="getdata(profile,3)">
                                        <label for="{{profile.profileTypeId}}-'1'" class="custom-control-label">{{profile.name}}</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card">
                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour" ng-click="onTabChange(4)">
                            <div class="card-header" id="headingFour">
                                <h5 class="mb-0">

                                    Free Classes

                                </h5>
                            </div>
                        </button>
                        <div id="collapseFour" class="collapse" aria-labelledby="collapseFour" data-parent="#accordion">
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio7" ng-model="Isused" name="customRadio7" value="true" ng-click="usedUnuseed(4)">
                                        <label for="customRadio7" class="custom-control-label">Used</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input" type="radio" id="customRadio8" ng-model="Isused" name="customRadio8" value="false" ng-click="usedUnuseed(4)">
                                        <label for="customRadio8" class="custom-control-label">Not Used</label>
                                    </div>
                                    <div class="card-header">
                                        <h2 class="card-title">Categories</h2>
                                    </div>
                                    <div class="custom-control custom-checkbox" ng-repeat="free in Freeclasses">
                                        <input type="checkbox" class="custom-control-input" id="{{free.profileTypeId}}" value="{{free.profileTypeId}}" ng-model="free.idfree" ng-change="CheckBoxSearchfree(free,4)">
                                        <label for="{{free.profileTypeId}}" class="custom-control-label">{{free.name}}</label>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
    <div class="col-md-9">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">Searching</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">


                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title"></h3>

                                    <div class="card-tools">
                                        <div class="input-group input-group-sm" style="width: 250px;">
                                            <input type="text" class="form-control float-right" style="height:38px;" id="forwardedSearch" name="forwardedSearch" ng-model="forwardedSearch" ng-change="findForwardedCases(forwardedSearch)" ng-model-options="{debounce: 50}" required placeholder="Search">

                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body table-responsive">
                                    <div class="row">
                                        <div class="col-md-4" ng-repeat="itm in forwardedCases">

                                        <!-- Profile Image -->
                                        <div class="card card-primary card-outline">

                                            <div class="card-body box-profile">
                                                <div class="text-center">
                                                    <div class="form-group">
                                                        <div class="custom-control custom-switch">
                                                            <input type="checkbox" class="" ng-disabled="itm.isUsed" ng-click="checkTrue(itm)" ng-model="itm.isUsed" id="{{itm.userId}}">
                                                            <label for="{{itm.userId}}" ng-if="itm.isUsed==true">Used</label>
                                                            <label for="{{itm.userId}}" ng-if="itm.isUsed==false">Unused </label>

                                                        </div>
                                                    </div>
                                                    <img ng-click="open(itm)" class="profile-user-img img-fluid img-circle" src="{{itm.thumbnailUrl}}" alt="User profile picture">
                                                </div>
                                                <a href="/UserProfile/Index?userId={{itm.userId}}&profileTypeId={{itm.profileTypeId}}">
                                                    <h3 class="profile-username text-center">{{itm.name}}</h3>
                                                </a>
                                                <p class="text-muted text-center">{{itm.profileTypeName}}</p>
                                            </div>

                                            <!-- /.card-body -->
                                        </div>
                                        <!-- /.card -->
                                    </div>
                                </div>

                                <div class="card-footer clearfix">
                                    <ul class="pagination pagination-sm m-0 float-right" uib-pagination total-items="forwardedPagination.TotalRecords" ng-model="forwardedPagination.Page" items-per-page="forwardedPagination.PageSize" ng-change="loadForwardedCases()" max-size="5" boundary-link-numbers="true" rotate="false">
                                    </ul>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>

                    <div class="modal fade" id="modal-default">
                        <div class="modal-dialog">
                            <div class="modal-content">
                             
                                <div class="modal-body">
                                    <img src="{{popUpImage}}" width="100" height="100" style="width:100%; height:100%" ng-if="profilePId===1 || profilePId===3" />

                                    <video style="width:100%; height:100%" ng-src="{{videoUrl | trustUrl}}" controls ng-if="profilePId==2">
                                    </video>
                                    <video style="width:100%; height:100%" ng-src="{{videoUrl | trustUrl}}" controls ng-if="profilePId==4">
                                    </video>
                                </div>
                              
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                    <!-- /.modal -->

                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>

@section SCRIPTS {
    <script src="~/js/Angular/SomeOthers/sweetalert.js"></script>
    <script src="~/js/AlertMsg/notify.js"></script>
    <script src="~/js/Angular/SomeOthers/angular-animate.js"></script>
    <script src="~/js/Angular/SomeOthers/angular-sanitize.js"></script>
    <script src="~/js/Angular/SomeOthers/ui-bootstrap-tpls-2.5.0.js"></script>
    <script src="~/js/Angular/SomeOthers/datetime-picker.js"></script>
    <script src="~/js/Angular/SomeOthers/underscore.js"></script>
    <script src="~/js/Angular/SomeOthers/SweetAlert.min.js"></script>
    <script src="~/js/Angular/SomeOthers/sweetalert.js"></script>
    <script src="~/js/Angular/SomeOthers/ngMask.js"></script>
    <script src="~/js/Angular/Directives/shadowbox.js"></script>
    <script src="../js/Angular/SomeOthers/commonService.js"></script>
    <script src="~/js/app-Controllers/AppFactorymarkting.js"></script>
    <script src="~/js/app-Controllers/AdminLibaray.js"></script>
    <script src="https://cdn.rawgit.com/angular-ui/ui-select/master/dist/select.min.js"></script>
}

